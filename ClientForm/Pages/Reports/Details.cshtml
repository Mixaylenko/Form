@page
@model ClientForm.Pages.Reports.DetailsModel
@{
    ViewData["Title"] = "Детали отчета";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@Model.Report.Name</h2>
        <div>
            <a asp-page="Edit" asp-route-id="@Model.Report.Id" class="btn btn-warning">Редактировать</a>
            <a asp-page="Index" class="btn btn-secondary">Назад</a>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            Информация о файле
        </div>
        <div class="card-body">
            <p><strong>Имя файла:</strong> @Model.Report.FileName</p>
            <a asp-controller="Reports" asp-action="Download" asp-route-id="@Model.Report.Id" class="btn btn-success">Скачать оригинал</a>
        </div>
    </div>

    @if (Model.IsExcel)
    {
        <div class="card">
            <div class="card-header">
                Просмотр Excel файла
            </div>
            <div class="card-body">
                <ul class="nav nav-tabs" id="excelTabs" role="tablist">
                    @for (int i = 0; i < Model.Worksheets.Count; i++)
                    {
                        <li class="nav-item" role="presentation">
                            <button class="nav-link @(i == 0 ? "active" : "")"
                                    id="tab-@i"
                                    data-bs-toggle="tab"
                                    data-bs-target="#sheet-@i"
                                    type="button"
                                    role="tab">
                                @Model.Worksheets[i].Name
                            </button>
                        </li>
                    }
                </ul>

                <div class="tab-content p-3 border border-top-0" id="excelTabContent">
                    @for (int i = 0; i < Model.Worksheets.Count; i++)
                    {
                        var worksheet = Model.Worksheets[i];
                        <div class="tab-pane fade @(i == 0 ? "show active" : "")"
                             id="sheet-@i"
                             role="tabpanel">

                            @if (worksheet.TableData.Any())
                            {
                                <div class="table-responsive mb-4">
                                    <table class="table table-bordered table-sm">
                                        @foreach (var row in worksheet.TableData)
                                        {
                                            <tr>
                                                @foreach (var cell in row)
                                                {
                                                    <td>@cell</td>
                                                }
                                            </tr>
                                        }
                                    </table>
                                </div>
                            }

                            @if (worksheet.Images.Any())
                            {
                                <h5>Графики и изображения</h5>
                                <div class="row">
                                    @foreach (var image in worksheet.Images)
                                    {
                                        <div class="col-md-6 mb-3">
                                            <div class="card">
                                                <div class="card-body">
                                                    <img src="data:image/@image.Format.ToLower();base64,@Convert.ToBase64String(image.ImageData)"
                                                         class="img-fluid"
                                                         alt="@image.Name" />
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-header">
                Содержимое файла
            </div>
            <div class="card-body">
                <pre class="mb-0">@await GetFileContent()</pre>
            </div>
        </div>
    }
</div>

@functions {
    public async Task<string> GetFileContent()
    {
        var contentResponse = await Model._httpClient.GetAsync($"api/reports/view/{Model.Id}");
        if (contentResponse.IsSuccessStatusCode)
        {
            return await contentResponse.Content.ReadAsStringAsync();
        }
        return "Не удалось загрузить содержимое файла";
    }
}
