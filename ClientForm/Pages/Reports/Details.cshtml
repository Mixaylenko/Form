@page
@model ClientForm.Pages.Reports.DetailsModel
@{
    ViewData["Title"] = "Report Details";
}

<div class="container">
    <h1>@Model.Report.Name</h1>
    <p>File: @Model.Report.FileName</p>

    @foreach (var worksheet in Model.Worksheets)
    {
        <div class="worksheet-section mb-5">
            <h2>@worksheet.Name</h2>

            @if (worksheet.TableData.Any())
            {
                <div class="table-responsive mb-4">
                    <table class="table table-bordered table-striped">
                        @foreach (var row in worksheet.TableData)
                        {
                            <tr>
                                @foreach (var cell in row)
                                {
                                    <td>@cell</td>
                                }
                            </tr>
                        }
                    </table>
                </div>
            }

            @if (worksheet.Images.Any())
            {
                <div class="chart-container">
                    @foreach (var image in worksheet.Images)
                    {
                        <div class="mb-4">
                            <img src="data:image/png;base64,@Convert.ToBase64String(image.Data)"
                                 alt="@image.AltText"
                                 class="img-fluid border rounded shadow" />
                            <p class="text-center mt-2">@image.AltText</p>
                        </div>
                    }
                </div>
            }
        </div>
    }

    <div class="mt-4">
        <a asp-page="Index" class="btn btn-secondary">Back to List</a>
        <a asp-page="Download" asp-route-id="@Model.Report.Id" class="btn btn-primary">Download Excel</a>
        <a asp-page="ConvertToWord" asp-route-id="@Model.Report.Id" class="btn btn-success">Convert to Word</a>
    </div>
</div>