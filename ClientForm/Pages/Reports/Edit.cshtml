@page
@model ClientForm.Pages.Reports.EditModel

<div class="container">
    <h2>Редактирование отчета</h2>

    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="In.Name">Название отчета</label>
            <input asp-for="In.Name" class="form-control" />
            <span asp-validation-for="In.Name" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label>Текущий файл: @Model.CurrentFileName</label>
        </div>

        <div class="form-group mt-3">
            <label asp-for="In.NewFile">Загрузить новый файл</label>
            <input asp-for="In.NewFile" type="file" class="form-control" />
            <span asp-validation-for="In.NewFile" class="text-danger"></span>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-primary">Сохранить</button>
            <a asp-page="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Отмена</a>
        </div>
    </form>
</div>